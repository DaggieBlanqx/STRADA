{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build:dev": "rimraf ./lib/**/* && tsc --watch",
    "build": "rimraf ./lib/**/* && tsc -p tsconfig-build.json && rollup -c rollup.config.js && rimraf ./tmp",
    "serve:dev": "concurrently \"npm run build:dev\" \"firebase serve --only functions -p 4201\"",
    "serve": "concurrently \"npm run build\" \"firebase serve --only functions -p 4201\"",
    "shell": "concurrently \"npm run build:dev\" \"firebase functions:shell\"",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "6.0.0",
    "firebase-functions": "2.0.4",
    "cors": "2.8.4",
    "rxjs": "6.2.2",
    "@google/maps": "0.5.5",
    "@turf/distance": "6.0.1",
    "@turf/helpers": "6.1.4"
  },
  "devDependencies": {
    "@types/cors": "2.8.4",
    "tslint": "5.11.0",
    "rxjs-tslint": "0.1.5",
    "typescript": "2.9.2",
    "concurrently": "3.6.1",
    "rollup": "0.64.1",
    "rollup-plugin-node-resolve": "3.3.0",
    "rimraf": "2.6.2"
  },
  "private": true
}
